{
  "name": "@pocket-studios/prettier-config",
  "version": "1.0.0",
  "description": "Shareable Prettier config for our projects",
  "main": "prettier.json",
  "repository": "git@github.com:pocket-studios/prettier-config.git",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --check .",
    "format:fix": "prettier --write ."
  },
  "devDependencies": {
    "husky": "^4.3.0",
    "lint-staged": "^10.4.1",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(json|yml|md)": [
      "prettier --write"
    ]
  }
}
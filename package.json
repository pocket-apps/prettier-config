{
  "name": "@pocket-studios/prettier-config",
  "version": "1.1.0",
  "description": "Shareable Prettier config for our projects",
  "repository": "git@github.com:pocket-studios/prettier-config.git",
  "license": "MIT",
  "main": "prettier.json",
  "scripts": {
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(json|yml|md)": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "prettier-plugin-packagejson": "2.2.6"
  },
  "devDependencies": {
    "husky": "4.3.0",
    "lint-staged": "10.4.1",
    "prettier": "2.1.2"
  }
}